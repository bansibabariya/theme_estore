<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ================ Added new custom Header in customize option ================ -->
    <template id="theme_customize_ept" inherit_id="website.theme_customize">
        <xpath expr="//content[@id='theme_customize_content_fonts']"
               position="after">

            <!-- Header Styles-->
            <content id="theme_customize_content_header" string="Headers" title="Choose your Header styles">
                <more data-depends="">
                    <list>
                        <opt data-xmlid="theme_clarico.option_header_01_assets,theme_clarico.customize_header_style_1"
                                data-icon="/theme_clarico/static/src/img/customise_option/h_style-1.jpg" data-reload="/"
                                string=" "/>
                        <opt data-xmlid="theme_clarico.option_header_02_assets,theme_clarico.customize_header_style_2"
                                data-icon="/theme_clarico/static/src/img/customise_option/h_style-2.jpg" data-reload="/"
                                string=" "/>
                        <opt data-xmlid="theme_clarico.option_header_03_assets,theme_clarico.customize_header_style_3"
                                data-icon="/theme_clarico/static/src/img/customise_option/h_style-3.jpg" data-reload="/"
                                string=" "/>
                        <opt data-xmlid="theme_clarico.option_header_04_assets,theme_clarico.customize_header_style_4"
                                data-icon="/theme_clarico/static/src/img/customise_option/h_style-4.jpg" data-reload="/"
                                string=" "/>
                        <opt data-xmlid="theme_clarico.option_header_05_assets,theme_clarico.customize_header_style_5"
                                data-icon="/theme_clarico/static/src/img/customise_option/h_style-5.jpg" data-reload="/"
                                string=" "/>
                        <opt data-xmlid="theme_clarico.option_header_06_assets,theme_clarico.customize_header_style_6"
                                data-icon="/theme_clarico/static/src/img/customise_option/h_style-6.jpg" data-reload="/"
                                string=" "/>
                        <opt data-xmlid="theme_clarico.option_header_07_assets,theme_clarico.customize_header_style_7"
                                data-icon="/theme_clarico/static/src/img/customise_option/h_style-7.jpg" data-reload="/"
                                string=" "/>
                    </list>
                </more>
            </content>
            <!-- Footer Styles-->
            <content id="theme_customize_content_footer" string="Footers" title="Choose your Footer styles">
                <more data-depends="">
                    <list>
                        <opt data-xmlid="theme_clarico.option_footer_01_assets,theme_clarico.customize_footer_style_1"
                             data-reload="/" data-icon="/theme_clarico/static/src/img/customise_option/footer_1.jpg"
                             string=" "/>
                        <opt data-xmlid="theme_clarico.option_footer_02_assets,theme_clarico.customize_footer_style_2"
                             data-reload="/" data-icon="/theme_clarico/static/src/img/customise_option/footer_2.jpg"
                             string=" "/>
                        <opt data-xmlid="theme_clarico.option_footer_03_assets,theme_clarico.customize_footer_style_3"
                             data-reload="/" data-icon="/theme_clarico/static/src/img/customise_option/footer_3.jpg"
                             string=" "/>
                    </list>
                </more>
            </content>

        </xpath>
        <xpath expr="//content[@id='theme_customize_content_colors']//list[1]//opt[5]"
               position="replace">
        </xpath>
        <xpath expr="//content[@id='theme_customize_content_colors']//list[4]"
               position="after">
            <list string="Header">
                <opt data-widget="color" data-color-type="theme" data-color="gamma" string="Header Text Color"/>
                <opt data-widget="color" data-color="header_text_hover_color" string="Header Text Hover Color"/>
            </list>
            <list string="Footer">
                <opt data-widget="color" data-color="footer_text_color" string="Footer Text Color"/>
            </list>
        </xpath>
    </template>

</odoo>
